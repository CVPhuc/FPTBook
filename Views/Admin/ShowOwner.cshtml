@model IEnumerable<ApplicationUser>


@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>
            ID
        </th>
        <th>
            User Name
        </th>
        <th>
            Email
        </th>
        <th>
            Image
        </th>
        <th>
            Phone
        </th>

        <th>

        </th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.User_Name</td>
            <td>@user.Email</td>
            <td> <img src="~/uploads/@user.User_Img" width="100px" height="150px"></td>
            <td>@user.PhoneNumber</td>


            <td>
                <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm ('Are you sure?')">Delete</a>
                @* <a asp-action="AddToCart" asp-route-productid="@book.book_Id">Add To Cart</a>*@
            </td>
        </tr>
    }
</table>