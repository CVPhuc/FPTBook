@model FPTBook_v3.Models.Owner


@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="col-md-8 grid-margin stretch-card" style="margin-left:230px">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title" style="text-align:center">Create Owner</h3>
            <form asp-controller="Admin" asp-action="RegisterOwner" method="post">
                <div class="form-group">
                    <input asp-for="Name" class="form-control" aria-required="true" />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="email" asp-for="Email" class="form-control" aria-required="true" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" aria-required="true" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <input type="submit" value="Register" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
