
@model IEnumerable<Book>



<div class="all-blog-posts">

    <h2 class="text-center">Book</h2>
    <br>
    <div>
        <div class="container" style="margin-top:30px">
            <div class="row">
                @foreach (var item in Model)
                {

                    <div class="col-md-3">
                        <div class="blog-post">
                            <div class="card">
                                <img src="~/uploads/@item.book_ImagURL" width="200px" height="250px" class="container" style="text-align:center; margin-top:10px" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@item.book_Title</h5>
                                    <p class="card-text">@item.book_Price</p>
                                    <a asp-controller="Cart" asp-action="AddItem" asp-route-bookId="@item.book_Id" class="btn btn-primary">Add To Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>


