@model BookDisplayModel


<div class="my-2" style="margin-left: 750px">
    <form asp-action="Index" class="row col-12 align-items-center">
        <div class="col-4">
            <label class="visually-hidden" for="genreId">Catgory</label>
            <select class="form-select" id="genreId" name="genreId">
                <option selected>Catgory choose</option>
                @foreach (var genre in Model.Categorys)
                {
                    <option selected="@(genre.cate_Id == Model.GenreId)" value="@genre.cate_Id">@genre.cate_Name</option>
                }
            </select>
        </div>

        <div class="col-4">
            <label class="visually-hidden" for="sterm">Search by title</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" value="@Model.STerm" id="sterm" name="sterm" placeholder="Sarch by title">
            </div>
        </div>

        <div class="col-4">
            <button type="submit" asp-controller="Home" asp-action="ShowBook" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        async function add(bookId) {
            var usernameEl = document.getElementById("username");
            if (usernameEl == null) {
                window.location.href = "/Identity/Account/Login";
                //var username=usernameEl.innerText;
                //  if(username.length<1){
                //      window.location.href="/Identity/Account/Login";
                //  }
            }
            try {
                var response = await fetch(`/User/Cart/AddItem?bookId=${bookId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    window.location.href = "/User/Cart/GetUserCart";
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}



